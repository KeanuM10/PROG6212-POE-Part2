@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2>Login</h2>
    <form method="post" action="@Url.Action("Login", "Home")">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Enter username" required />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
    }
    <p class="mt-3">Use the following credentials for testing:</p>
    <ul>
        <li><strong>Lecturer:</strong> username: lecturer, password: 123</li>
        <li><strong>Coordinator:</strong> username: coordinator, password: 123</li>
        <li><strong>Manager:</strong> username: manager, password: 123</li>
    </ul>
</div>
